<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="shortcut icon" href="{{STATIC_URL}}favicon.ico">
		<link rel="apple-touch-icon-precomposed" sizes="152x152" href="{{STATIC_URL}}favicon-152.png">
		<title>{% block title %}rSS{% endblock %}</title>
		{%- block resources %}
		<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
		<![endif]-->
		{%- block css %}
		{%- if debug %}
		<link href="{{STATIC_URL}}less/bootstrap/bootstrap.less" rel="stylesheet/less" type="text/css">
		<link href="{{STATIC_URL}}less/main.less" rel="stylesheet/less" type="text/css">
		<script src="{{STATIC_URL}}js/less.js" type="text/javascript"></script>
		{%- else %}
		<link href="{{STATIC_URL}}css/bootstrap.css" rel="stylesheet" type="text/css">
		<link href="{{STATIC_URL}}css/main.css" rel="stylesheet" type="text/css">
		{%- endif %}
		{%- block extra_css %}{% endblock %}
		{%- endblock %}
		{%- block scripts %}
		{%- block pre_scripts %}{% endblock %}
		<script src="{{STATIC_URL}}js/jquery.min.js" type="text/javascript"></script>
		<script src="{{STATIC_URL}}js/markup.min.js" type="text/javascript"></script>
		<script src="{{STATIC_URL}}js/bootstrap.min.js" type="text/javascript"></script>
		<script type="text/javascript">
			var AJAX_BASE="{{AJAX_BASE}}";
			var STATIC_URL="{{STATIC_URL}}";
			var CSRF_TOKEN="{{csrf_token}}";
		</script>
		<script src="{{STATIC_URL}}js/core.js" type="text/javascript"></script>
		{%- block post_scripts %}{% endblock %}
		{%- endblock %}
		{%- endblock %}
	</head>
	<body>
		{%- block body %}
		<div class='container'>
			{%- block content %}{% endblock %}
		</div>
		{%- endblock %}
	</body>
</html>
